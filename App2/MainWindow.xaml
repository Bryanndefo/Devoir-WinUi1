    mc:Ignorable="d"
    Title="Chez Tartine">

    <Grid>
        <NavigationView 
        x:Name="NavView" 
        PaneDisplayMode="Top" 
        IsSettingsVisible="False"
        AlwaysShowHeader="False"
        Loaded="NavView_Loaded"
        SelectionChanged="NavView_SelectionChanged"
        BackRequested="NavView_BackRequested">

            <!-- Modifier l'espacement de l'entête -->
            <NavigationView.Resources>
                <Thickness x:Key="NavigationViewHeaderMargin">15 0</Thickness>
            </NavigationView.Resources>

            <NavigationView.MenuItems>
                <NavigationViewItem Tag="Interface_magasin.View.Inventaire" Content="Inventaire"/>
                <NavigationViewItem Tag="Interface_magasin.View.Recettes" Content="Recettes"/>
                <NavigationViewItem Tag="Interface_magasin.View.Ingrédients" Content="Ingrédients"/>
                <NavigationViewItem Tag="App2.View.Clients" Content="Clients"/>
                <NavigationViewItem Tag="Interface_magasin.View.Ventes" Content="Ventes"/>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame" NavigationFailed="ContentFrame_NavigationFailed"/>

        </NavigationView>

    </Grid>

